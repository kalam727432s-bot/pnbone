<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:paddingTop="?attr/actionBarSize"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/home_logo"
            android:contentDescription="PNB Logo"
            android:adjustViewBounds="true"
            android:scaleType="fitXY" />

        <LinearLayout
            android:paddingHorizontal="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hello, Punjab National Bank Customer Apply Complete your account details in few simple steps enter details below and click verify."
                android:textSize="14sp"
                android:textColor="#000"
                android:layout_marginTop="8dp" />
            <LinearLayout
                android:layout_marginVertical="10dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_marginRight="10dp"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/logo"
                    android:contentDescription="PNB Logo"
                    android:adjustViewBounds="true"/>

                <TextView
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PUNJAB NATIONAL BANK"
                    android:textSize="22sp"
                    android:textColor="@color/primary1"
                    />

            </LinearLayout>


            <TextView
                android:layout_gravity="center"
                android:textAlignment="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Customer service: 02261156300 | Toll Free Nunber-cpl-c 0223232727"
                android:textSize="12sp"
                android:textColor="#000"
                android:textStyle="bold"
                android:layout_marginTop="8dp" />

            <androidx.cardview.widget.CardView
                android:layout_marginHorizontal="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="@color/primary">

                <!-- Form Container -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp"
                    android:gravity="center_horizontal">

                    <TextView
                        android:layout_gravity="center"
                        android:textAlignment="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="HELP DESK"
                        android:textSize="20sp"
                        android:textColor="@color/primary1"
                        android:textStyle="bold"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="15dp" />

                    <TextView
                        android:paddingVertical="10dp"
                        android:textStyle="bold"
                        android:paddingHorizontal="10dp"
                        android:layout_marginBottom="20dp"
                        android:background="#fff"
                        android:layout_gravity="center"
                        android:textAlignment="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Your details are being processed. Our team will contact you as soon as the process is complete Within Few Minutes to 24 Hours"
                        android:textSize="18sp"
                        android:textColor="#434343"
                        android:layout_marginTop="8dp" />

                    <com.google.android.material.button.MaterialButton
                        android:onClick="GoToHome"
                        android:id="@+id/nextButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Submit Another Query"
                        android:backgroundTint="@color/primary1"
                        android:textSize="17sp"
                        android:textColor="@color/white"
                        android:textAllCaps="false"
                        android:padding="12dp"
                        android:layout_marginBottom="10dp"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:orientation="horizontal">

                <!-- Left Column -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="15G/H"
                        android:textColor="#6E2C00"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:paddingBottom="6dp" />

                    <TextView
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Submission Card"
                        android:textColor="#6E2C00"
                        android:textSize="16sp"
                        android:paddingBottom="6dp" />

                    <TextView
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Rewards FAQ"
                        android:textColor="#6E2C00"
                        android:textSize="16sp" />
                </LinearLayout>

                <!-- Right Column -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Apply Panjab"
                        android:textColor="#F1C40F"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:paddingBottom="6dp" />

                    <TextView
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="National Bank User"
                        android:textColor="#F1C40F"
                        android:textSize="16sp"
                        android:paddingBottom="6dp" />

                    <TextView
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Guldelines Apply"
                        android:textColor="#F1C40F"
                        android:textSize="16sp"
                        android:paddingBottom="6dp" />

                    <TextView
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="For POS"
                        android:textColor="#F1C40F"
                        android:textSize="16sp" />
                </LinearLayout>

            </LinearLayout>


            <TextView

                android:layout_gravity="center"
                android:textAlignment="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Secure@Punjab National Bank. All Rights Reserved."
                android:textSize="12sp"
                android:textColor="#666666"
                android:layout_marginVertical="8dp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
